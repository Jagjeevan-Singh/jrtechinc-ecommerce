# Firebase Configuration
# IMPORTANT: Add these exact variables to Vercel Environment Variables
# Vercel Dashboard -> Your Project -> Settings -> Environment Variables
# Get these values from Firebase Console -> Project Settings -> Your apps

VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Backend API URL
VITE_BACKEND_URL=https://jrtechinc-ecommerce.onrender.com

# MongoDB (Server-side only, not needed in Vercel for frontend)
MONGO_URI=your_mongo_uri_here

# Razorpay (Backend only - do NOT expose secret on client-side)
RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here

PORT=3000
